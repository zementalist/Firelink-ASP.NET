@if (ViewData["success"] != null)
{
    <div class="alert alert-success text-center mb-0">
        <span>
            @ViewData["success"]
        </span>
    </div>
}
@if (ViewData["info"] != null)
{
    <div class="alert alert-info text-center mb-0">
        <span>
            @ViewData["info"]
        </span>
    </div>
}
<div class="home">
    <div class="background-infrastructure">
        <div class="ground">
            <div class="row">
                <div class="col-12 d-block d-md-none d-sm-none">
                    <div class="motto-contianer">
                        <h3 class="motto">Life's About Sharing</h3>
                    </div>
                </div>
                <div class="container-fluid" style="padding-left:15px;padding-right:15px;">
                    <div class="row">
                        <div class="col-md-3 col-sm-3 col-12">
                            <br class="d-none d-md-block d-sm-block">
                            <br class="d-none d-md-block d-sm-block">
                            <br class="d-none d-md-block d-sm-block">
                            <img id="img1" src="~/Content/images/cloudfiles.png" alt="logo" class="opt-image">
                            <br>
                            <div class="instruct1">
                                <h4 id="text">Upload & Share your files with friends, Fast & Free</h4>
                                <br class="d-none d-md-block">
                                <h4>No need for registration !</h4>
                                <br>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 d-none d-md-block d-sm-block my-auto">
                            <div class="motto-contianer">
                                <h3 class="motto">Life's About Sharing</h3>
                            </div>
                            <div class="motivate">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-sm-12">
                                        <br class="d-none d-md-block d-sm-block"><br class="d-none d-md-block d-sm-block">
                                        <h4>Click 'Upload now' and let the fire boost your file!</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-3"></div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-8 col-12 col-offset-6 mx-auto">
                        <a class="btn btn-primary up-btn" href="#types-section">Upload now</a>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="upload-component-par" id="types-section">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="component-infrastructure">
                        <div class="row">
                            <form id="form"></form>
                            <div class="col-md-4 col-sm-4 col-4 col-lg-4">
                                <div class="file-card" onclick="submitForm('image')">
                                    <div class="icon-container" style="width:100%;height:100%">
                                        <i class="icon far fa-image"></i>
                                    </div>
                                    <div class="typeName">
                                        <p id="textType">Image</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-4 col-lg-4">
                                <div class="file-card" onclick="submitForm('video')">
                                    <div class="icon-container" style="width:100%;height:100%">
                                        <i class="icon far fas fa-video"></i>
                                    </div>
                                    <div class="typeName">
                                        <p id="textType">Video</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-4 col-lg-4">
                                <div class="file-card" onclick="submitForm('audio')">
                                    <div class="icon-container" style="width:100%;height:100%">
                                        <i class="icon fas fa-volume-down"></i>
                                    </div>
                                    <div class="typeName">
                                        <p id="textType">Audio</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-4 col-lg-4">
                                <div class="file-card" onclick="submitForm('compressed')">
                                    <div class="icon-container" style="width:100%;height:100%">
                                        <i class="icon far fa-file-archive"></i>
                                    </div>
                                    <div class="typeName">
                                        <p id="textType">Compressed</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-4 col-lg-4">
                                <div class="file-card" onclick="submitForm('document')">
                                    <div class="icon-container" style="width:100%;height:100%">
                                        <i class="icon far fa-file"></i>
                                    </div>
                                    <div class="typeName">
                                        <p id="textType">Document</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-4 col-lg-4">
                                <div class="file-card" onclick="submitForm('other')" style="opacity:0.5;">
                                    <div class="icon-container" style="width:100%;height:100%">
                                        <i class="icon far fa-file"></i>
                                    </div>
                                    <div class="typeName">
                                        <p id="textType">Other</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Scripts/home.js")
